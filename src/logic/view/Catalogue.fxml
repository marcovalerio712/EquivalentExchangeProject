<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" layoutX="10.0" layoutY="10.0" prefHeight="739.0" prefWidth="427.0" spacing="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.controller.graphic.CatalogueView">
  <style>
    -fx-padding: 10;
    -fx-border-style: solid inside;
    -fx-border-width: 2;
    -fx-border-insets: 5;
    -fx-border-radius: 5;
    -fx-border-color: blue;
  </style>
  <children>
    <Label fx:id="placeHolder" alignment="CENTER" cache="true" cacheHint="SCALE" text="Catalogue" textAlignment="CENTER" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="searchBar" prefHeight="25.0" prefWidth="342.0" promptText="Search item name here!" />
            <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#search" text="Search" />
         </children>
      </HBox>
      <HBox prefHeight="50.0" prefWidth="393.0" spacing="50.0">
         <children>
            <RadioButton fx:id="all" mnemonicParsing="false" onAction="#all" text="All">
               <toggleGroup>
                  <ToggleGroup fx:id="type" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="book" mnemonicParsing="false" onAction="#book" text="Book" toggleGroup="$type" />
            <RadioButton fx:id="movie" mnemonicParsing="false" onAction="#movie" text="Movie" toggleGroup="$type" />
            <RadioButton fx:id="videogame" mnemonicParsing="false" onAction="#videogame" text="VideoGame" toggleGroup="$type" />
         </children>
      </HBox>
      <ComboBox fx:id="genre" onAction="#genre" prefWidth="150.0" promptText="GENRE" />
      <ListView fx:id="list" prefHeight="657.0" prefWidth="393.0" />  
  </children>
</VBox>
