<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" layoutX="10.0" layoutY="10.0" prefHeight="734.0" prefWidth="1271.0" spacing="10" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.controller.graphic.CatalogueView">
  <style>
    -fx-padding: 10;
    -fx-border-style: solid inside;
    -fx-border-width: 2;
    -fx-border-insets: 5;
    -fx-border-radius: 5;
    -fx-border-color: blue;
  </style>
  <children>
      <Pane prefHeight="722.0" prefWidth="1041.0" style="-fx-background-color: #FFFFFF;">
         <children>
            <TextField fx:id="searchBar" layoutX="7.0" layoutY="14.0" prefHeight="25.0" prefWidth="1117.0" promptText="Search item name here!" />
            <Button fx:id="searchBtn" layoutX="1124.0" layoutY="14.0" mnemonicParsing="false" onAction="#search" prefHeight="25.0" prefWidth="99.0" text="Search" />
            <Label layoutX="996.0" layoutY="89.0" text="Order by:" />
            <HBox layoutX="8.0" layoutY="53.0" prefHeight="25.0" prefWidth="623.0" spacing="50.0" style="-fx-background-color: #FFFFFF;">
               <children>
                  <RadioButton fx:id="all" mnemonicParsing="false" onAction="#all" text="All">
                     <toggleGroup>
                        <ToggleGroup fx:id="type" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="book" mnemonicParsing="false" onAction="#book" text="Book" toggleGroup="$type" />
                  <RadioButton fx:id="movie" mnemonicParsing="false" onAction="#movie" text="Movie" toggleGroup="$type" />
                  <RadioButton fx:id="videogame" mnemonicParsing="false" onAction="#videogame" text="VideoGame" toggleGroup="$type" />
               </children>
            </HBox>
            <ComboBox fx:id="genre" layoutX="7.0" layoutY="85.0" onAction="#genre" prefWidth="150.0" promptText="GENRE" />
            <ComboBox fx:id="orderBy" layoutX="1073.0" layoutY="85.0" onAction="#orderBy" prefWidth="150.0" />
            <ScrollPane layoutX="7.0" layoutY="136.0" prefHeight="503.0" prefWidth="1230.0" style="-fx-background-color: #FFFFFF;">
               <content>
                  <FlowPane fx:id="flowPane" hgap="30.0" prefHeight="500.0" prefWidth="1227.0" style="-fx-background-color: #FFFFFF;" vgap="20.0">
                     <padding>
                        <Insets bottom="10.0" left="20.0" top="15.0" />
                     </padding>
                  </FlowPane>
               </content>
            </ScrollPane>
            <Button fx:id="nextPage" layoutX="1150.0" layoutY="654.0" mnemonicParsing="false" onAction="#nextPage" prefHeight="25.0" prefWidth="73.0" text="NEXT" />
            <Button fx:id="prevPage" layoutX="973.0" layoutY="654.0" mnemonicParsing="false" onAction="#prevPage" prefHeight="25.0" prefWidth="99.0" text="PREVIOUS" />
            <Label fx:id="page" layoutX="1098.0" layoutY="658.0" text="Page" />
         </children>
      </Pane>  
  </children>
</VBox>
